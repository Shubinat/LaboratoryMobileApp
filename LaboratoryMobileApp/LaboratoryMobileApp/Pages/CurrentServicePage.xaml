<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LaboratoryMobileApp.Pages.CurrentServicePage" Title="Информация">
    <ContentPage.Content>


        <Frame Padding="5" Margin="8" CornerRadius="10">
            <StackLayout>
                <Label TextColor="#20917D" Text="{Binding Name}" FontSize="30" HorizontalOptions="Center" Margin="5"/>
                <ScrollView VerticalOptions="FillAndExpand">
                    <Label Text="{Binding Description}" FontSize="20"/>
                </ScrollView>
                <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                    <Label Text="Цена: "  Margin="5"/>
                    <Label Text="{Binding Price}" Margin="5"/>
                </StackLayout>
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>